{
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.formatOnSave": false,
    "eslint.alwaysShowStatus": true,
    "eslint.options": {
        "extensions": [".html", ".js"]
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
    },
    "eslint.workingDirectories": [
        "."
    ],
}
